@model IEnumerable<Book>
@{
    ViewData["Title"] = "List Book of Admin";
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Book Title</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
            <th scope="col">Author</th>
            <th scope="col">Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
        <tr>
            <th scope="row">@item.Id</th>
            <td>@item.Title</td>
            <td>@item.Price</td>
             <td> <img src="@item.ImageUrl" style="height:4em"></td>
             <td>@item.Author</td>
             <td>@item.Description</td>
              <td></td>
             <td><a class="btn btn-primary">Thêm</a></td>
                
        </tr>
           
        }
    </tbody>
</table>
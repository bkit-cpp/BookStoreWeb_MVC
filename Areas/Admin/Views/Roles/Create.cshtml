@model RoleVm
@{
    ViewData["title"] = "Add Role";
}
<h1>Add Roles</h1>
<form asp-action="Create" method="post" class="mt-3">
    <div class="form-btn-group row">
        <label asp-for="RoleName" class=""></label>
        <div>
            <input asp-for="RoleName" class="form-control" placeholder="RoleName" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group col-4">
        <button type="submit" class="btn btn-primary">Add Role</button>

    </div>
</form>
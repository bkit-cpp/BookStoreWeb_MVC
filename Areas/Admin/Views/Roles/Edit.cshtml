@model BookStoreMVCWeb.Models.ViewModel.EditRoleVm
@{
    ViewData["title"] = "Edit Role";
}
<h1>Edit Role</h1>
<form method="post" class="row">
    <div class="mt-3 col-4">
        <div class="form-group row">
            <label asp-for="Id" class="col-form-label col-2"></label>
            <input asp-for="Id" disabled class="form-control" style="font-size:0.9em" />
        </div>
        <div class="form-group row">
            <label asp-for="RoleName" class="col-form-label col-2"></label>
            <input asp-for="RoleName" class="form-control" style="font-size:0.9em" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <a asp-action="Index" asp-controller="Roles" class="btn btn-warning">Back</a>
            <button type="submit" class="btn btn-success">Update</button>
        </div>
        <div class="col-5">
            <h3>
                User with @Model.RoleName role 
            </h3>
            <table class=" table table-striped col-8">
                <tr></tr>
                @if (Model.Users.Any())
                {
                    foreach(var user in Model.Users)
                    {
                    <tr>
                        <td class="form-label">
                            @user
                        </td>
                    </tr>
                    }
                }
                else
                {
                    <tr>
                        <td class="form-label">No User with @Model.RoleName role</td>
                    </tr>
                }
            </table>
            <div>
                <a asp-action="EditUserInRole" asp-route-id="@Model.Id" class="btn btn-primary">Add/Remove in Role</a>
            </div>
        </div>
    </div>
</form>